<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/app_bar_l"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTransparent"
    android:gravity="bottom"
    app:elevation="0dp">

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/search_place_fab"
        style="@style/ExtendedFloatingActionButtonTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:text="@string/search_place_title"
        app:icon="@drawable/ic_search_grey_24dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MaterialCardViewOneCornerTheme.MaterialCardView.Rounded" />

</com.google.android.material.appbar.AppBarLayout>