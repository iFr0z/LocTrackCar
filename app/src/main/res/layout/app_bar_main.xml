<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/app_bar_l"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="86dp"
    android:background="@color/colorTransparent"
    android:gravity="bottom"
    android:theme="@style/ToolbarPrimaryTheme"
    app:elevation="0dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                style="@style/AppCompatImageViewTheme"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="24dp"
                android:layout_weight="0.2"
                android:contentDescription="@string/app_name"
                app:srcCompat="@drawable/ic_search_grey_24dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/search_place_tv"
                style="@style/TextViewTheme"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.8"
                android:hint="@string/search_place_hint"
                android:singleLine="true" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.Toolbar>

</com.google.android.material.appbar.AppBarLayout>