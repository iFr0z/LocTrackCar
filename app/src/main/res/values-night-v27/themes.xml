        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:navigationBarDividerColor">@color/colorPrimaryDark</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="colorAccent">@color/colorPurple</item>
