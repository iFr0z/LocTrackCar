<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="Theme" parent="AppTheme">
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
        <item name="android:statusBarColor">@color/colorStatusBar</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationStyle</item>
    </style>

    <style name="WindowAnimationStyle">
        <item name="android:windowEnterAnimation">@android:anim/linear_interpolator</item>
    </style>

    <style name="SplashTheme" parent="Theme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppbarPrimaryTheme">
        <item name="android:textColorSecondary">@color/colorPurple</item>
        <item name="android:textColorPrimary">@color/colorPurple</item>
        <item name="colorControlHighlight">@color/colorPurple</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="NestedScrollViewTheme">
        <item name="android:background">@color/colorDarkBackground</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="ExtendedFloatingActionButtonTheme">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="iconTint">@color/colorPurple</item>
        <item name="rippleColor">@color/colorGreyRipple</item>
        <item name="android:textColor">@color/colorPurple</item>
        <item name="elevation">8dp</item>
    </style>

    <style name="FloatingActionButtonPrimaryTheme">
        <item name="backgroundTint">@color/colorPurple</item>
        <item name="android:tint">@color/colorPrimaryDark</item>
        <item name="rippleColor">@color/colorGreyRipple</item>
        <item name="elevation">8dp</item>
    </style>

    <style name="FloatingActionButtonSecondaryTheme">
        <item name="backgroundTint">@color/colorTeal</item>
        <item name="android:tint">@color/colorPrimaryDark</item>
        <item name="rippleColor">@color/colorGreyRipple</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="elevation">8dp</item>
    </style>

    <style name="ChipPrimaryTheme" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipIconTint">@color/colorPrimaryDark</item>
        <item name="rippleColor">@color/colorGreyRipple</item>
        <item name="chipBackgroundColor">@color/colorPurple</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="ChipSecondaryTheme" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipIconTint">@color/colorPrimaryDark</item>
        <item name="rippleColor">@color/colorGreyRipple</item>
        <item name="chipBackgroundColor">@color/colorTeal</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="MaterialCardViewTwoCornerTheme">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="cardBackgroundColor">@color/colorPrimary</item>
        <item name="cardElevation">8dp</item>
    </style>

    <style name="MaterialCardViewPrimaryTheme">
        <item name="cardBackgroundColor">@color/colorPrimary</item>
        <item name="cardElevation">8dp</item>
    </style>

    <style name="MaterialCardViewSecondaryTheme">
        <item name="cardBackgroundColor">@color/colorPrimary</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="TextInputLayoutTheme" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/colorPrimary</item>
        <item name="hintTextColor">@color/colorPurple</item>
        <item name="android:background">@drawable/bg_linear_gradient_black</item>
        <item name="startIconTint">@color/colorPurple</item>
        <item name="endIconTint">@color/colorPurple</item>
        <item name="cornerFamily">rounded</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">0dp</item>
        <item name="boxCornerRadiusBottomStart">0dp</item>
        <item name="boxCornerRadiusBottomEnd">0dp</item>
        <item name="android:theme">@style/TextInputEditTextTheme</item>
    </style>

    <style name="TextInputEditTextTheme" parent="ThemeOverlay.MaterialComponents.TextInputEditText.FilledBox">
        <item name="colorPrimary">@color/colorPurple</item>
    </style>

    <style name="ShapeAppearanceOverlay.ExtendedFloatingActionButtonOneCornerTheme.ExtendedFloatingActionButton.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardViewOneCornerTheme.MaterialCardView.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardViewTwoCornerTheme.MaterialCardView.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardViewTheme.MaterialCardView.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="colorAccent">@color/colorPurple</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@color/colorTransparent</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="android:colorBackground">@color/colorTransparent</item>
    </style>
</resources>