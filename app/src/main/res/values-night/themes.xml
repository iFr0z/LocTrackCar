<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="colorAccent">@color/colorPurple</item>
        <item name="android:windowBackground">@drawable/branded_logo_night</item>
        <item name="android:statusBarColor">@color/colorStatusBar</item>
    </style>

    <style name="ToolbarPrimaryTheme">
        <item name="android:textColorSecondary">@color/colorPurple</item>
        <item name="android:textColorPrimary">@color/colorPurple</item>
        <item name="colorControlHighlight">@color/colorPurple</item>
        <item name="android:background">@drawable/bg_one_corner_dark</item>
    </style>

    <style name="ToolbarSecondaryTheme">
        <item name="android:textColorSecondary">@color/colorPurple</item>
        <item name="android:textColorPrimary">@color/colorPurple</item>
        <item name="colorControlHighlight">@color/colorPurple</item>
        <item name="elevation">8dp</item>
    </style>

    <style name="NestedScrollViewTheme">
        <item name="android:background">@color/colorDarkBackground</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="FloatingActionButtonPrimaryTheme">
        <item name="backgroundTint">@color/colorPurple</item>
        <item name="iconTint">@color/colorPrimaryDark</item>
        <item name="rippleColor">@color/colorNull</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="FloatingActionButtonSecondaryTheme">
        <item name="backgroundTint">@color/colorTeal</item>
        <item name="iconTint">@color/colorPrimaryDark</item>
        <item name="rippleColor">@color/colorNull</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="CardViewTheme">
        <item name="cardBackgroundColor">@color/colorPrimary</item>
        <item name="cardCornerRadius">23dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="LinearLayoutTheme">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="EditTextTheme">
        <item name="android:textColor">@color/colorPurple</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewTheme">
        <item name="android:textColor">@color/colorPurple</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppCompatImageViewTheme">
        <item name="tint">@color/colorPurple</item>
    </style>
</resources>