<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@drawable/branded_logo</item>
        <item name="android:statusBarColor">@color/colorStatusBar</item>
    </style>

    <style name="ToolbarPrimaryTheme" parent="AppTheme">
        <item name="android:background">@drawable/bg_one_corner</item>
    </style>

    <style name="ToolbarSecondaryTheme">
        <item name="android:textColorSecondary">@color/colorNull</item>
        <item name="android:textColorPrimary">@color/colorNull</item>
        <item name="colorControlHighlight">@color/colorNull</item>
        <item name="elevation">8dp</item>
    </style>

    <style name="NestedScrollViewTheme">
        <item name="android:background">@color/colorNull</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="FloatingActionButtonPrimaryTheme">
        <item name="backgroundTint">@color/colorPrimaryDark</item>
        <item name="iconTint">@color/colorNull</item>
        <item name="rippleColor">@color/colorNull</item>
        <item name="android:textColor">@color/colorNull</item>
    </style>

    <style name="FloatingActionButtonSecondaryTheme">
        <item name="backgroundTint">@color/colorNull</item>
        <item name="iconTint">@color/colorPrimaryDark</item>
        <item name="rippleColor">@color/colorGreyRipple</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="CardViewTheme">
        <item name="cardBackgroundColor">@color/colorAppTheme</item>
        <item name="cardCornerRadius">23dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="LinearLayoutTheme">
        <item name="android:background">@color/colorNull</item>
    </style>

    <style name="EditTextTheme">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="backgroundTint">@color/colorNull</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewTheme">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppCompatImageViewTheme" parent="AppTheme" />
</resources>